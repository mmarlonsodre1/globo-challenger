<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.home.HomeAdapter"
    android:layout_marginTop="@dimen/pattern_margin"
    android:layout_marginBottom="@dimen/pattern_margin">

    <ImageView
        android:id="@+id/iv_notice"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/error_image"
        android:contentDescription="@string/notice_image"
        android:layout_marginStart="@dimen/pattern_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section"
        android:textColor="@color/gray"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/pattern_margin"
        app:layout_constraintStart_toEndOf="@+id/iv_notice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/colorTextPattern"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/pattern_margin"
        app:layout_constraintStart_toStartOf="@+id/tv_publisher"
        app:layout_constraintTop_toBottomOf="@+id/tv_publisher"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>